<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibsterFinalProj</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibsterFinalProj.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Libster 📖</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
              <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Book" asp-action="Catalog">Catalog</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="BookList" asp-action="BookLists">Book Lists</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                           <div class="navbar-collapse collapse d-sm-inline-flex"> 
                                <ul class="navbar-nav flex-grow-1">
                                  <li class="nav-item">
                                      <a class="nav-link text-dark" asp-area=""></a> 
                                  </li>
                                  <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area=""></a>
                                  </li>
                                </ul>
                                <div class="navbar-nav ms-auto">
                                  <partial name="_LoginPartial" />
                                </div>
                            </div>
                          </div>
                        </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
         <div class='controls'>
            <h1>Adjust Font Size</h1>
            <button id="fontUp" class="textSizeControl" alt="increase font size"><i class ="bi bi-plus-circle"></i></button>
            <button id="fontDown" class="textSizeControl" alt="decrease font size"><i class ="bi bi-dash-circle"></i></button>
            <button id="fontReset" class="textSizeControl" alt="reset font size"><i class ="bi bi-arrow-counterclockwise"></i></button>
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Libster - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="module" src="~/js/Index.js" asp-append-version="true"></script>
    <script type="module" src="~/js/DOMManipulator.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
